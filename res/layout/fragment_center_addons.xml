<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/beige_middle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    tools:context="org.namelessrom.updatecenter.fragments.UpdateFragment">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchMode="spacingWidthUniform"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_centerInParent="true">

        <FrameLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/frameLayout10"
            android:background="@color/darker_gray" />

        <FrameLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/frameLayout11"
            android:background="@color/blueish" />

        <FrameLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/frameLayout12"
            android:background="@color/blueish_strong" />

        <FrameLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/frameLayout13"
            android:background="@color/greenish" />
    </GridLayout>

</RelativeLayout>
