<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="org.namelessrom.updatecenter.fragments.UpdateFragment">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/dynamic_imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_update" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/action_updates"
        android:id="@+id/dynamic_textView"
        android:layout_below="@+id/dynamic_imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="italic" />
</RelativeLayout>
